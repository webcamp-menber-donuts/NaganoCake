<div class="container">
  <div class="row m-3"><h2>新規会員登録</h2></div>
  <div class="row m-5">
    <div class="col">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table">
        <div class="field">
          <tr>
            <th><a>名前</a><%= f.label :（姓）%></th>
            <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"令和" %></td>
            <th><%= f.label :（名） %></th>
            <td><%= f.text_field :fast_name, autofocus: true, autocomplete: "fast_name", placeholder:"道子" %></td>
          </tr>
        </div>
        
        <div class="field">
          <tr>
            <th><a>フリガナ</a><%= f.label :（セイ）%></th>
            <td><%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name", placeholder:"レイワ" %></td>
            <th><%= f.label :（メイ） %></th>
            <td><%= f.text_field :kana_fast_name, autofocus: true, autocomplete: "kana_fast_name", placeholder:"ミチコ" %></td>
          </tr>
        </div>
        
        <div class="field">
          <tr>
            <th><%= f.label :メールアドレス %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %></td>
          </tr>
        </div>  
        
        <div class="field">
          <tr>
            <th><%= f.label :郵便番号（ハイフンなし） %></th>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder:"0000000" %></td>
          </tr>
        </div>
        
        <div class="field">
          <tr>
            <th><%= f.label :住所,class:"size-input-address" %></th>
            <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
          </tr>
        </div>
        
        <div class="field">
          <tr>
            <th><%= f.label :電話番号（ハイフンなし） %></th>
            <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder:"00000000000" %></td>
          </tr>
        </div>
        
        <div class="field">
          <tr>
            <th><%= f.label :パスワード（６文字以上） %></th>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
        </div>
        
        <div class="field">
          <tr>
            <th><%= f.label :パスワード（確認用） %></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </div>
        
      </table>
        <div class="actions text-center">
          <%= f.submit "新規登録",class:"btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="m-3">
      <h2>既に登録済みの方</h2>
      <%= render "public/shared/links" %>
  </div>
</div>