<h4>配送先登録/一覧</h4>
<%= form_with model: @shopping_address, local: true do |f| %>
  <div>
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder:"0000000" %>
  </div>

  <div>
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :宛名 %>
    <%= f.text_field :name %>
  </div>

  <div>
  <%= f.submit :新規登録, class: 'btn btn-success' %>
  </div>
<% end %>

<table border="1">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @shopping_addresses.each do |shopping_address| %>
      <tr>
        <td><%= shopping_address.postal_code %></td>
        <td><%= shopping_address.address %></td>
        <td><%= shopping_address.name %></td>
        <td>
          <%= link_to '編集する', edit_shopping_address_path(shopping_address), class: "btn btn-sm btn-success" %>
          <%= link_to '削除する', shopping_address_path(shopping_address.id), method: :delete, class: "btn btn-sm btn-danger"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
