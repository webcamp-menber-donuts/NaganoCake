<div class='container'>
  <div class='row'>
    <h3 class='m-4'>注文履歴一覧</h3>
  </div>
  
  <div class='row'>
    <table class='table table-bordered'>
      <thead class='table-secondary text-center'>
        <tr>
          <th class='col-1'>注文日</th>
          <th class='col-3'>配送先</th>
          <th class='col-2'>注文商品</th>
          <th class='col-1'>支払金額</th>
          <th class='col-1'>ステータス</th>
          <th class='col-1'>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr class='text-center'>
          <td>
            <%= order.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td class='text-left'>
            〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td class='text-left'>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.product.name %><br>
            <% end %>
          </td>
          <td>
            <%= order.total_payment.to_s :delimited %>円
          </td>
          <td>
            <%= order.order_status_i18n %>
          </td>
          <td>
            <%= link_to "表示する", order_path(order), class:'btn btn-info' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
