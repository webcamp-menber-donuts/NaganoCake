<div class='container'>
    
  <div class='row'>
    <h3>注文履歴一覧</h3>
  </div>
  
  <div class='row'>
    <table class='table'>
      <thead class='table-secondary'>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><% order.created_at.strftime('%Y/%m/%d') %></td>
          <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.mane %></td>
          <td>order.idを持つorder_detailの商品名のみ羅列</td>
          <td><%= order.total_payment %>円</td>
          <td><%= order.order_status %></td>
          <td><%= link_to "表示する", order_path(order), class:'btn btn-info' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  
</div>
