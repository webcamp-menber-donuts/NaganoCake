<div class='container'>

  <div class='row p-4'>
    <h3>会員情報編集</h3>
  </div>
  
  <div>
  <%= form_with model:@customer, url:customers_information_path, local:true do |f| %>
  <div class="field">
    <a>名前</a>
    <%= f.label :（姓）%>
    <%= f.text_field :last_name %>
    <%= f.label :（名） %>
    <%= f.text_field :fast_name %>
  </div>
  
  <div class="field">
    <a>フリガナ</a>
    <%= f.label :（セイ）%>
    <%= f.text_field :kana_last_name %>
    <%= f.label :（メイ） %>
    <%= f.text_field :kana_fast_name %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, placeholder:"0000000" %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :telephone_number, placeholder:"00000000000" %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
  </div>
  
  <div class="form-btn">
    <%= f.submit "編集内容を保存", class:'btn btn-success mb-2' %>
    <%= link_to "退会する", customers_withdrawal_check_path, class:'btn btn-danger mb-2' %>
  </div>
  
  <% end %>
</div>
  
  
</div>

