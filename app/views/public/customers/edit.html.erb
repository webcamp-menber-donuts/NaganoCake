<div class='container'>
  <div class='row'>
    <h3 class='m-4'>会員情報編集</h3>
  </div>
  <%= render 'layouts/error_messages', model: @customer %>

  <div class='row'>
    <%= form_with model: @customer, url:customers_information_path, local:true do |f| %>
    <table class='table table-borderless'>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.text_field :fast_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :kana_last_name %></td>
        <td><%= f.text_field :kana_fast_name %></td>
      </tr>
      <tr>
        <td><%= f.label :郵便番号（ハイフンなし） %></td>
        <td><%= f.text_field :postal_code, placeholder:"0000000" %></td>
      </tr>
      <tr>
        <td><%= f.label :住所 %></td>
        <td  colspan="2"><%= f.text_field :address, size: "50x20" %></td>
      </tr>
      <tr>
        <td><%= f.label :電話番号（ハイフンなし） %></td>
        <td><%= f.text_field :telephone_number, placeholder:"00000000000" %></td>
      </tr>
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "編集内容を保存", class:'btn btn-success mb-2' %></td>
        <td><%= link_to "退会する", customers_withdrawal_check_path, class:'btn btn-danger mb-2' %></td>
      </tr>
    </table>
   <% end %>
  </div>
</div>
