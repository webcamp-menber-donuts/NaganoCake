<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員一覧</h2>
        <table class="table">
          <thead>
            <tr>
                <th>会員ID</th>   
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
          </thead>
                        
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
                <th><%= customer.id %></th>
                <th>
                  <%= link_to admin_customer_path(customer) do %>
                    <%= customer.last_name %><%= customer.fast_name %>
                  <% end %>
                </th>
                <th><%= customer.email %></th>
                <th><%= customer.is_deleted ? '退会' : '有効' %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
          <%= paginate @customers %>
        </div>
    </div>
</div>
