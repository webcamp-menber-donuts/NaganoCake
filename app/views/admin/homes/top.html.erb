<div class="container">
  <div class="row">
    <div class="col">
      <h2>注文履歴一覧</h2>
        <table class="table">
          <thead>
            <tr>
                <th>購入日時</th>   
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
            </tr>
          </thead>

          <tbody>
              <% @orders.each do |order| %>
            <tr>
                <th>
                  <%= link_to admin_order_path(order) do %> 
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                  <% end %>
                </th>
                <th><%= order.customer.last_name %><%= order.customer.fast_name %></th>
                <th><%= order.product_quantity %></th>
                <th><%= order.order_status_i18n %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="mx-auto" style="width: 200px;">
            <%= paginate @orders %>
          
        </div>
          
        </div>
    </div>
</div>
