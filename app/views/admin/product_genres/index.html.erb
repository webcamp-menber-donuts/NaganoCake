<h4>ジャンル一覧・追加 </h4>

<div class="form-genre">
<%= form_with model: [:admin, @genre], local: true do |f| %>
  <%= f.label :ジャンル名 %>
  <%= f.text_field :name %>
  <%= f.submit :新規登録, class: 'btn btn-success' %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |product_genre| %>.
      <tr>
        <td><%= product_genre.name %></td>
        <td></td>
        <td><%= link_to '編集する', edit_admin_product_genre_path(product_genre), class: "btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>