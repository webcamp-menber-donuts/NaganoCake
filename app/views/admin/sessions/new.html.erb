<div class="container">
  <div class="row">
    <div class="col">
      <h2>管理者ログイン</h2>
      
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
      
      <%= render "admin/shared/links" %>
      
    </div>
  </div>
</div>
